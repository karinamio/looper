<div class="span5 form register">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well-special"}) do |f| %>

<legend>register</legend>
	<% flash.each do |type, message| %>
		<div class = "alert <%= flash_class type %>">
			<button class="close" data-dismiss="alert">x</button>
			<%= message %>
		</div>
	<% end %>

  <%= f.input :first_name, label: false, placeholder: "first name", class: "hello" %>
  <%= f.input :last_name, label: false, placeholder: "last name" %>
  <%= f.input :profile_name, label: false, placeholder: "profile name" %>    
  <%= f.input :fb_id, label: false, placeholder: "facebook id" %>
  <%= f.input :email, label: false, placeholder: "email" %>
  <%= f.input :password, label: false, placeholder: "password" %>
  <%= f.input :password_confirmation, label: false, placeholder: "password confirmation" %>

  <%= f.submit "go", class: "btn btn-special btn-block" %>

<% end %>
</div>
