<div class="span5 form forgot-password">
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: 'well-special', :method => :post }) do |f| %>
	<div class = 'page-header none'>
		<legend>forgot your password?</legend>
	</div>
	<% flash.each do |type, message| %>
		<div class = "alert <%= flash_class type %>">
			<button class="close" data-dismiss="alert">x</button>
			<%= message %>
		</div>
	<% end %>
  	<%= devise_error_messages! %>

  	<%= f.input :email, label: false, placeholder: "email" %>
  	<%= f.submit "send me reset instructions", class: 'btn btn-special btn-block' %>
	<% end %>
</div>